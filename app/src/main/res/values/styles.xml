<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeaderTextStyle">
        <item name="android:textColor">?attr/black_to_white</item>
        <item name="android:textSize">@dimen/text_mark_22sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textColor">?attr/black_to_white</item>
        <item name="android:textSize">@dimen/text_mark_32sp</item>
        <item name="fontFamily">@font/ys_display_bold</item>
    </style>

    <style name="SubtitleTextStyle">
        <item name="android:textColor">?attr/black_to_white</item>
        <item name="android:textSize">@dimen/text_mark_16sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="BottomIconStyle">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@drawable/bottom_nav_selector_mode</item>
        <item name="itemTextColor">@drawable/bottom_nav_selector_mode</item>
        <item name="itemRippleColor">@color/blue</item>
    </style>

    <style name="ToolbarTitleStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:contentInsetStartWithNavigation">@dimen/mark_0dp</item>
        <item name="android:titleTextAppearance">@style/ToolbarTextStyle</item>
    </style>

    <style name="ToolbarTextStyle" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textColor">?attr/black_to_white</item>
        <item name="android:textSize">@dimen/text_mark_22sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

</resources>
